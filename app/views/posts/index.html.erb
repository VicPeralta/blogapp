<div class='container'>
  <h1><%=@user_info.name%></h1>
  <h3>Number of post:<%=@user_info.postCounter%></h3>
  <% for post in @posts %>
    <div class='post-card'>
      <p>Post #<%=post.id %></p>
      <a href='/users/<%=@user_info.id%>/posts/<%=post.id %>'><%=post.text%></a>
    </div>
  <% end %>
</div>
