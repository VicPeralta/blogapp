<%= render partial: "shared/user_card", locals:{user:@user}%>

<% @posts.each do |post| %>
  <%= render partial:"shared/post_card", locals: {post:post, user:@user}%>
  <div class="comments">
    <% post.comments.each do |comment|%>
      <p class='bold italic'>
        <%=comment.author.name%>:
      </p>
      <p class='comment-text'>
        <%=comment.text%>
      </p>
    <% end %>
  </div>
<% end %>
